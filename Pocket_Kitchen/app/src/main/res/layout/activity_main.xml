<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:id="@+id/refrigerator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/main_refrigerator_btn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/refrigerator"></ImageButton>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="73dp"
        android:layout_below="@id/refrigerator_layout"
        android:text="냉장고"
        android:fontFamily="@font/nanumpen"
        android:textSize="35dp"/>

    <LinearLayout
        android:id="@+id/gas_range_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/main_gas_range_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/gas_range">
        </ImageButton>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="53dp"
        android:layout_below="@id/gas_range_layout"
        android:text="가스레인지"
        android:fontFamily="@font/nanumpen"
        android:textSize="35dp"/>

    <LinearLayout
        android:id="@+id/recipe_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/main_recipe_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/recipe"></ImageButton>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="273dp"
        android:layout_below="@id/recipe_layout"
        android:text="레시피"
        android:fontFamily="@font/nanumpen"
        android:textSize="35dp"/>


    <LinearLayout
        android:id="@+id/community_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/main_community_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/community">
        </ImageButton>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="274dp"
        android:layout_below="@id/community_layout"
        android:text="커뮤니티"
        android:fontFamily="@font/nanumpen"
        android:textSize="35dp"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0FFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_text"
            android:layout_gravity="center"
            android:text="포켓 키친"
            android:fontFamily="@font/nanumpen"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>

    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>