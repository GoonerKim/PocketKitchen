<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">

    <EditText
        android:id="@+id/edit_join_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_edittext"
        android:hint="이메일 주소"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:privateImeOptions="defaultInputmode=english"
        android:singleLine="true"
        android:textColor="#222222" />

    <EditText
        android:id="@+id/edit_join_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_join_id"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_edittext"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="16dp"
        android:privateImeOptions="defaultInputmode=english"
        android:singleLine="true"
        android:textColor="#222222" />

    <EditText
        android:id="@+id/edit_join_password_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_join_password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_edittext"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:padding="16dp"
        android:privateImeOptions="defaultInputmode=english"
        android:singleLine="true"
        android:textColor="#222222" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_join_password_re"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_edittext"
        android:hint="사용자 이름"
        android:padding="16dp"
        android:privateImeOptions="defaultInputmode=english"
        android:singleLine="true"
        android:textColor="#222222" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/background_login"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:privateImeOptions="defaultInputmode=english"
        android:singleLine="true"
        android:text="가입하기"
        android:textColor="@android:color/white" />

</RelativeLayout>